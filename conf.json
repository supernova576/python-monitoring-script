{
    "serviceMonitoring": {
        "is_active": true,
        "hostname": "{{ host_name }}",
        "service_list": ["ssh", "apache2", "mysql", "docker", "cron"]
    },
    "fileMonitoring": {
        "is_active": true,
        "db_path": "/root/files.db.json",
        "files_to_monitor": [
            "/etc/hosts", 
            "/etc/resolv.conf", 
            "/etc/passwd", 
            "/etc/shadow", 
            "/etc/services", 
            "/etc/crontab", 
            "/etc/sysctl.conf", 
            "/etc/fstab", 
            "/etc/ssh/sshd_config"
        ]
    },
    "mailgun": {
        "is_active": true,
        "webroot": "https://api.mailgun.net/v3/sandbox234979blahblahblah.mailgun.org/messages",
        "username": "api",
        "api_key": "key-blahblahblahblahblahblah",
        "from": "Hostname <monitoring_script@your.domain>",
        "to": "your@mail.com"
    },
    "logging": {
        "log_file_path": "/var/log/monitoring_script.log",
        "log_level": "INFO"
    },
    "db": {
        "is_active": true,
        "db_path": "/root/monitoring_script_results.db"
    }
}